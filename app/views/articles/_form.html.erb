<% if @article.errors.any? %>
  <h6>The following errors prevented the article from getting created</h6>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @article do |f| %>
<div class="row">
  <div class="input-field col s6">
      <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
</div>
<div class="row">
  <div class="input-field col s12">
    <%= f.label :description %>
    <%= f.text_area :description, id: 'textarea2', class: 'materialize-textarea', 'data-length': 300 %>
  </div>
</div>
<div class="row match-form-padding">
  <%= f.submit :class => "waves-effect waves-light btn" %>
</div>
<% end %>
