<!DOCTYPE html>
<html>
  <head>
    <title>AlphaBlog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
      <div class="nav-wrapper">
        <%= link_to root_path, class: "brand-logo" do %>
            <i class="material-icons">all_inclusive</i>
        <% end %>
        <a href="#" data-target="mobile-demo" class="sidenav-trigger"><i class="material-icons">menu</i></a>
        <ul class="right hide-on-med-and-down">
          <li><%= link_to 'About', about_path %></li>
          <li><a href="https://www.facebook.com/profile.php?id=10044537" target="_blank">Facebook</a></li>
          <li><a href="https://www.linkedin.com/in/andrew-o-hara-2204b07/" target="_blank">Linkedin</a></li>
        </ul>
      </div>
    </nav>

    <ul class="sidenav" id="mobile-demo">
      <li><%= link_to 'Home', root_path %></li>
      <li><%= link_to 'About', about_path %></li>
      <li><a href="https://www.facebook.com/profile.php?id=10044537" target="_blank">Facebook</a></li>
      <li><a href="https://www.linkedin.com/in/andrew-o-hara-2204b07/" target="_blank">Linkedin</a></li>
    </ul>
    <%= yield %>
  </body>
</html>
